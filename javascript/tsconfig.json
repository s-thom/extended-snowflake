{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
